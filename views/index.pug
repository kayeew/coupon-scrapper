extends layout

block content

  .container
      h2#pageHeading 
        | Coupon Scrapper
      br
      form.form-inline(method="post", action="getcoupon")
        button.btn.btn-raised.btn-primary(type="submit") Find Deals
          

      br
      div#output
        if kfc_counter
          | Found #{kfc_counter} KFC deals.
          div.kfcContainer
            table.table
              thead
                tr
                  th KFC
              tbody
                if kfc_coupons.length
                  tr
                  - for (var i = 0; i < kfc_coupons.length; i++)
                      td
                        div
                          p= kfc_coupons[i]
                        div
                          img.kfcDeals(src= kfc_coupons_img[i])
        br
        if carlsjr_counter
          | Found #{carlsjr_counter} Carl's Jr deals.
          table.table
            thead
              tr
                th Carl's Jr
            tbody
              if carlsjr_coupons
                tr
                  each carlsjr_image in carlsjr_coupons
                    td.imageContainer
                      img.carlsjrDeals(src= carlsjr_image)
        br
        if wendys_counter
          | Found #{wendys_counter} Wendy's deals.
          table.table
            thead
              tr
                th Wendy's
            tbody
              if wendys_coupons
                tr
                  each wendys_image in wendys_coupons
                    td.imageContainer
                      img.wendysDeals(src= wendys_image)

          div
            | Burger King deals.
            embed(src= "https://bk-newzealand-prod-02.s3.amazonaws.com/sites/burgerking.co.nz/files/documents/BKG1175_January_Mailer_05%5B2%5D.pdf" width="100%" height="500" alt="pdf" pluginspage="http://www.adobe.com/products/acrobat/readstep2.html")
              
      